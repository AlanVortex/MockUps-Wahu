---
// Importaci칩n de im치genes
import ernestoProduccion from "../assets/ernestoProduccion.png";
import antonioProduccion from "../assets/antonioProduccion.png";
import jocelynProduccion from "../assets/jocelynProduccion.png";
import lizProduccion from "../assets/lizProduccion.png";
import esparzaProduccion from "../assets/esparzaProduccion.png";

const images = [
  { src: ernestoProduccion.src, alt: "Ernesto Produccion" },
  { src: antonioProduccion.src, alt: "Antonio Produccion" },
  { src: jocelynProduccion.src, alt: "Jocelyn Produccion" },
  { src: lizProduccion.src, alt: "Liz Produccion" },
  { src: esparzaProduccion.src, alt: "Esparza Produccion" },
];
---

<div class="relative mt-6">
  <!-- Bot칩n Izquierdo -->
  <button
    onclick="document.getElementById('carousel').scrollBy({ left: -300, behavior: 'smooth' })"
    class="absolute left-2 top-1/2 transform -translate-y-1/2 bg-black bg-opacity-50 text-white p-2 rounded-full z-10"
    aria-label="Scroll Left"
  >
    &#8592;
  </button>

  <!-- Contenedor del carrusel -->
  <div
    id="carousel"
    class="flex overflow-x-auto flex-nowrap gap-4 w-full scrollbar-hide scroll-smooth"
  >
    {
      images.map((image, index) => (
        <img
          src={image.src}
          alt={image.alt}
          class="w-auto max-h-48 object-cover rounded-md hover-effect cursor-pointer"
          data-src={image.src}
          data-alt={image.alt}
        />
      ))
    }
  </div>

  <!-- Bot칩n Derecho -->
  <button
    onclick="document.getElementById('carousel').scrollBy({ left: 300, behavior: 'smooth' })"
    class="absolute right-2 top-1/2 transform -translate-y-1/2 bg-black bg-opacity-50 text-white p-2 rounded-full z-10"
    aria-label="Scroll Right"
  >
    &#8594;
  </button>

  <!-- Modal de imagen expandida -->
  <div
    id="imageModal"
    class="fixed inset-0 hidden items-center justify-center bg-black bg-opacity-75 z-20"
  >
    <div class="relative">
      <img
        id="modalImage"
        src=""
        alt=""
        class="max-w-full max-h-[90vh] object-contain rounded-md"
      />
    </div>
  </div>
</div>
