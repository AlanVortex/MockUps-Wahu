---
// Importación de imágenes
import willElenco from "../assets/willElenco.jpeg";
import watsonElenco from "../assets/watsonElenco.jpeg";
import starkElenco from "../assets/starkElenco.jpeg";
import rockElenco from "../assets/rockElenco.jpeg";
import eizaElenco from "../assets/eizaElenco.jpeg";
---

<!-- Carrusel -->
<div class="relative mt-6">
    <!-- Botón Izquierdo -->
    <button
        onclick="document.getElementById('carousel3').scrollBy({ left: -300, behavior: 'smooth' })"
        class="absolute left-2 top-1/2 transform -translate-y-1/2 bg-black bg-opacity-50 text-white p-2 rounded-full z-10"
        aria-label="Scroll Left"
    >
        &#8592;
    </button>

    <!-- Contenedor del carrusel -->
    <div
        id="carousel3"
        class="flex overflow-x-auto flex-nowrap gap-4 w-full scrollbar-hide scroll-smooth"
    >
        <!-- Imagen con nombre y carrera debajo -->
        <div class="flex flex-col items-center">
            <img
                src={willElenco.src}
                alt="Descripción de imagen 1"
                class="w-auto max-h-48 object-cover rounded-md hover-effect"
            />
            <p class="mt-2 font-bold text-white">Will Smith</p>
            <p class="text-sm text-lime-500">Adam</p>
        </div>

        <div class="flex flex-col items-center">
            <img
                src={watsonElenco.src}
                alt="Descripción de imagen 2"
                class="w-auto max-h-48 object-cover rounded-md hover-effect"
            />
            <p class="mt-2 font-bold text-white">Ema Watson</p>
            <p class="text-sm text-lime-500">Diana</p>
        </div>

        <div class="flex flex-col items-center">
            <img
                src={starkElenco.src}
                alt="Descripción de imagen 3"
                class="w-auto max-h-48 object-cover rounded-md hover-effect"
            />
            <p class="mt-2 font-bold text-white">Robert Downey Jr.</p>
            <p class="text-sm text-lime-500">David Beckham</p>
        </div>

        <div class="flex flex-col items-center">
            <img
                src={rockElenco.src}
                alt="Descripción de imagen 4"
                class="w-auto max-h-48 object-cover rounded-md hover-effect"
            />
            <p class="mt-2 font-bold text-white">Dwayne Johnson</p>
            <p class="text-sm text-lime-500">The Rock</p>
        </div>

        <div class="flex flex-col items-center">
            <img
                src={eizaElenco.src}
                alt="Descripción de imagen 5"
                class="w-auto max-h-48 object-cover rounded-md hover-effect"
            />
            <p class="mt-2 font-bold text-white">Eiza Gonzalez</p>
            <p class="text-sm text-lime-500">Amanda</p>
        </div>

        <!-- Botón Derecho -->
        <button
            onclick="document.getElementById('carousel3').scrollBy({ left: 300, behavior: 'smooth' })"
            class="absolute right-2 top-1/2 transform -translate-y-1/2 bg-black bg-opacity-50 text-white p-2 rounded-full z-10"
            aria-label="Scroll Right"
        >
            &#8594;
        </button>
    </div>

    <style>
        .scrollbar-hide {
            scrollbar-width: none; /* Firefox */
            -ms-overflow-style: none; /* IE y Edge */
        }
        .scrollbar-hide::-webkit-scrollbar {
            display: none; /* Chrome, Safari y Edge */
        }
        .hover-effect {
            transition:
                transform 0.3s ease,
                box-shadow 0.3s ease;
        }
        .hover-effect:hover {
            transform: scale(1.1);
            box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.3);
        }
        #imageModal img {
            animation: fadeIn 0.3s ease-in-out;
        }
        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }
    </style>
</div>
